<% content_for :title, @title %>
<h1><center>All employees</center></h1>

<div class="employees_container">
  <ul>
    <% @employees.each do |employee| %>
      <% unless employee.active_employee == false %>
        <li class="span4" id="employees_list">
      	  <pre>
      		  <div class="employees_display">
              <% if employee.clocked_in? %>
                <i class="icon-time icon-large" id="green_clock"></i>
              <% else %>
                <i class="icon-time icon-large" id="red_clock"></i>
              <% end %>
        		  <%= link_to employee.name, employee %>
        	    <% if current_employee.manager? && !current_employee?(employee) %>
       			    <%= button_to "delete", employee, method: :delete, :class => "btn btn-danger", :id => "delete_employee_button", data: { confirm: "Delete employee?" } %>
              <% end %>
            </div>
          </pre>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<div class="row">
<%= will_paginate %>
</div>